<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.changjoo.ohyeah">

    <!-- 인터넷 접근 권한 추가 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 문자수신허용 -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_MMS" />

    <!-- 화면 깨우기 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 윈도우에 띄우기 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/oh"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/oh"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="android:icon">
        <receiver
            android:name=".CallAndSmsReceiver"
            android:enabled="true"
            android:exported="true">

            <!-- 등록된 필터만 수신한다. -->
            <intent-filter>

                <!-- 문자 수신 -->
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- [START firebase_service] -->
        <service android:name=".service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!-- [END firebase_service] -->

        <service android:name=".service.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <!-- 네이버 아이디로 로그인에서 사용하는 액티비티를 등록 -->
        <activity
            android:name="com.nhn.android.naverlogin.ui.OAuthLoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.nhn.android.naverlogin.ui.OAuthLoginInAppBrowserActivity"
            android:label="OAuth2.0 In-app" />
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.JoinActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.FixSettingActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"></activity>
        <activity android:name=".ui.BudgetSettingActivity" />
        <activity android:name=".ui.PurposeSetActivity" />
        <activity android:name=".ui.NestSettingActivity" />
        <activity android:name=".terms.Terms1Activity" />
        <activity android:name=".terms.Terms2Activity" />
        <activity
            android:name=".ui.ModifySettingActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ui.ModifyPurposeActivity" />
        <activity
            android:name=".ui.ModifyFixActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.SetActivity" />
        <activity android:name=".ui.ChangePwdActivity" />
        <activity android:name=".ui.Widget_SettingActivity" />
        <activity android:name=".ui.WidgetSettingActivity" />

        <receiver android:name=".OhYeahWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/oh_yeah_widget_info" />
        </receiver>

        <activity android:name=".ui.SendEmailActivity"></activity>
        <activity android:name=".ui.FindPwdActivity"></activity>
    </application>

</manifest>