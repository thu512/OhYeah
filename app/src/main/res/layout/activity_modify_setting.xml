<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:onClick="click"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.changjoo.ohyeah.ui.ModifySettingActivity">

    <ScrollView
        android:onClick="click"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56.5dp"
                android:background="@drawable/black_underline"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="100">

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.9" />

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.3"
                    android:background="@mipmap/back_btn" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="23.3" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="34.9"
                    android:gravity="center"
                    android:text="@string/budget"
                    android:textColor="#3b4aaa"
                    android:textSize="20.3sp" />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="23.5dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="32.3dp"
                android:layout_height="28dp"
                app:srcCompat="@mipmap/wallet0"
                android:layout_gravity="center"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="28dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_underline"
                    android:gravity="center"
                    android:text="@string/budget_day_txt1"
                    android:textColor="#9b9b9b"
                    android:textSize="13.5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/day"
                    android:layout_width="73.8dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_underline"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#3b4aaa"
                    android:textColorHint="#3b4aaa"
                    android:textCursorDrawable="@null"
                    android:maxLength="2"
                    android:textSize="18.5sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_underline"
                    android:gravity="center"
                    android:text="@string/budget_day_txt2"
                    android:textColor="#9b9b9b"
                    android:textSize="13.5sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="22.5dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27.8dp"
                android:text="@string/modi"
                android:textSize="18.5sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="7.5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:gravity="center">


                <com.changjoo.ohyeah.utill.BackPressEditText
                    android:id="@+id/remain_money"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_underline"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#3b4aaa"
                    android:textSize="18.5sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_underline"
                    android:gravity="center"
                    android:text="@string/budget_won"
                    android:textColor="#9b9b9b"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="43.4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="8.3dp"
                android:background="#1a63c5c9"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="21.8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27.8dp"
                android:text="@string/modi2"
                android:textSize="18.5sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="7.3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:gravity="center">


                <com.changjoo.ohyeah.utill.BackPressEditText
                    android:id="@+id/nest_money"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_underline"
                    android:gravity="center"
                    android:inputType="number"
                    android:textSize="18.5sp"
                    android:textColor="#c33b4d" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_underline"
                    android:gravity="center"
                    android:text="@string/budget_won"
                    android:textColor="#9b9b9b"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="1.8dp" />

            <TextView
                android:id="@+id/err"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:textSize="10.8sp"
                android:textColor="#c33b4d"
                android:textStyle="bold"
                android:text="@string/modi3"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="12.3dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30.5dp"
                android:layout_gravity="center"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="@string/nest_set"
                    android:textSize="25.3sp"
                    android:textColor="#3b4aaa"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="25"
                    android:ems="2"
                    android:maxLength="3"
                    android:textSize="25.3sp"
                    android:textColor="#3b4aaa"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/nest_per"
                    android:textSize="25.3sp"
                    android:textColor="#3b4aaa"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="22.5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:orientation="horizontal"
                android:weightSum="100">
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="23.75"/>
                <ProgressBar
                    android:id="@+id/pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="52.5"
                    android:layout_gravity="center_horizontal"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress2"
                    android:secondaryProgress="100"
                    />
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="23.75"/>
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="22.5dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33.5dp"
                android:text="@string/modi4"
                android:textSize="10.8sp"
                android:textColor="#4a4a4a"
                android:lineSpacingExtra="6sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                />

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="13.5dp" />

            <RelativeLayout
                android:layout_width="204.8dp"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:background="@mipmap/back_day">
                <me.grantland.widget.AutofitTextView
                    android:id="@+id/money"
                    android:layout_width="145.8dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center_horizontal|bottom"
                    android:textSize="40.3sp"
                    android:textColor="#3b4aaa"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="11dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_won"
                    android:layout_alignBaseline="@+id/money"
                    android:layout_alignBottom="@+id/money"
                    android:layout_toEndOf="@+id/money"
                    android:textSize="13.5sp"
                    android:textColor="#9b9b9b"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="31.5dp" />

            <Button
                android:id="@+id/add_money"
                android:layout_width="204.8dp"
                android:layout_height="48dp"
                android:background="@drawable/blue_ract"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/modi5"
                android:textSize="18sp"
                android:textColor="#3b4aaa"
                />

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="35dp" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="53.3dp"
                android:text="@string/submit"
                android:textSize="18.5sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/blue_ract_bg" />

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/select_key"
        android:layout_width="108dp"
        android:layout_height="25.3dp"
        android:weightSum="2"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/viewFlipper"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">
        <Button
            android:id="@+id/num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="number_key"
            android:background="@mipmap/basic_on"/>
        <Button
            android:id="@+id/cal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="cal_key"
            android:background="@mipmap/group_off"/>

    </LinearLayout>
    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


    </ViewFlipper>
</RelativeLayout>
