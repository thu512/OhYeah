<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEdittext"
    tools:context="com.changjoo.ohyeah.ui.BudgetSettingActivity"
    android:onClick="click">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorEdittext"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.9"
            android:background="@drawable/black_underline"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.9" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.3"
                android:background="@mipmap/back_btn" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="28.3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24.9"
                android:gravity="center"
                android:text="@string/budget"
                android:textColor="#3b4aaa"
                android:textSize="20.3sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15.6">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="51.8dp"
                android:layout_height="4.5dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                app:srcCompat="@mipmap/setting1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="32.3dp"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp"
                app:srcCompat="@mipmap/wallet1" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/gray_underline"
                android:gravity="center"
                android:text="@string/budget_day_txt1"
                android:textColor="#9b9b9b"
                android:textSize="13.5sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="73.8dp"
                android:layout_height="match_parent"
                android:background="@drawable/gray_underline"
                android:gravity="center"
                android:hint="100"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#3b4aaa"
                android:textColorHint="#3b4aaa"
                android:textCursorDrawable="@null"
                android:textSize="18.5sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/gray_underline"
                android:gravity="center"
                android:text="@string/budget_day_txt2"
                android:textColor="#9b9b9b"
                android:textSize="13.5sp"
                android:textStyle="bold" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.3" />
        <android.support.v4.widget.Space
            android:id="@+id/spacer1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.3"
            android:gravity="center"
            android:text="@string/budget_day_txt3"
            android:textColor="#000000"
            android:textSize="18.5sp"
            android:textStyle="normal"
            />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.3"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/budget_day_txt4"
                android:textColor="#000000"
                android:textSize="18.5sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="25.3dp"
                android:layout_height="match_parent"
                android:text="30"
                android:textAlignment="center"
                android:textColor="#3b4aaa"
                android:textSize="18.5sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/budget_day_txt2"
                android:textColor="#000000"
                android:textSize="18.5sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="@string/budget_day_txt5"
                android:textColor="#000000"
                android:textSize="18.5sp" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.3"
            android:gravity="center"
            android:text="@string/budget_day_txt6"
            android:textColor="#000000"
            android:textSize="18.5sp" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.3"
            android:gravity="center">


            <com.changjoo.ohyeah.utill.BackPressEditText
                android:id="@+id/editText"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/gray_underline"
                android:gravity="center"
                android:hint="10000"
                android:inputType="number"
                android:textColor="#3b4aaa"
                android:textSize="18.5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/gray_underline"
                android:gravity="center"
                android:text="@string/budget_won"
                android:textColor="#9b9b9b"
                android:textStyle="bold" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="36.6" />
        <android.support.v4.widget.Space
            android:id="@+id/spacer2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.8"
            android:visibility="gone"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.3"
            android:background="@mipmap/enter" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/select_key"
        android:layout_width="108dp"
        android:layout_height="25.3dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_above="@+id/viewFlipper"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp">
        <Button
            android:id="@+id/num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="number_key"
            android:background="@mipmap/basic_on"/>
        <Button
            android:id="@+id/cal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="cal_key"
            android:background="@mipmap/group_off"/>

    </LinearLayout>

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/firstViewFlipper"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:background="#c0c0c0"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="4">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@mipmap/bt_1"
                        android:text="1"
                        android:textColor="#00000000" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/bt_2"
                        android:text="2"
                        android:textColor="#00000000" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/bt_3"
                        android:text="3"
                        android:textColor="#00000000" />

                    <Button
                        android:id="@+id/btn_divide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/bt_division"
                        android:text="%"
                        android:textColor="#00000000" />

                    <Button
                        android:id="@+id/btn_ac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/bt_ac"
                        android:text="AC"
                        android:textColor="#00000000" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/bt_4"
                        android:text="4"
                        android:textColor="#00000000" />

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/bt_5"
                        android:text="5"
                        android:textColor="#00000000" />

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/bt_6"
                        android:text="6"
                        android:textColor="#00000000" />

                    <Button
                        android:id="@+id/btn_mul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/bt_multiply"
                        android:text="*"
                        android:textColor="#00000000" />

                    <Button
                        android:id="@+id/btn_del"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@mipmap/bt_delete"
                        android:text="del"
                        android:textColor="#00000000" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="5">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TableRow
                            android:id="@+id/tableRow2"
                            android:layout_width="wrap_content"
                            android:layout_height="51dp">

                            <Button
                                android:id="@+id/btn7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@mipmap/bt_7"
                                android:text="7"
                                android:textColor="#00000000" />

                            <Button
                                android:id="@+id/btn8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@mipmap/bt_8"
                                android:text="8"
                                android:textColor="#00000000" />

                            <Button
                                android:id="@+id/btn9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@mipmap/bt_9"
                                android:text="9"
                                android:textColor="#00000000" />

                            <Button
                                android:id="@+id/btn_sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@mipmap/bt_minus"
                                android:text="-"
                                android:textColor="#00000000" />


                        </TableRow>


                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:weightSum="4">

                                <Button
                                    android:id="@+id/btn_down"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@mipmap/bt_down"
                                    android:text="."
                                    android:textColor="#00000000" />

                                <Button
                                    android:id="@+id/btn0"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:background="@mipmap/bt_0"
                                    android:text="0"
                                    android:textColor="#00000000" />


                                <Button
                                    android:id="@+id/btn_sum"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@mipmap/bt_sum"
                                    android:text="+"
                                    android:textColor="#00000000" />
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="102dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_result"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/bt_equal"
                            android:text="="
                            android:textColor="#00000000" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ViewFlipper>
</RelativeLayout>