<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorEdittext"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.changjoo.ohyeah.ui.BudgetSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.6"
        android:background="@drawable/black_underline"
        android:weightSum="100"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.9"/>
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/back_btn"
            android:layout_weight="3.3" />
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="28.3"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="24.9"
            android:layout_marginTop="5dp"
            android:text="@string/budget"
            android:gravity="center"
            android:textColor="#3b4aaa"
            android:textSize="20.3sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15.6">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="51.8dp"
            android:layout_height="4.5dp"
            android:layout_marginBottom="14dp"
            app:srcCompat="@mipmap/setting1"
            android:layout_above="@+id/imageView3"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="32.3dp"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            app:srcCompat="@mipmap/wallet1" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4.4"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13.5sp"
            android:textStyle="bold"
            android:background="@drawable/gray_underline"
            android:text="@string/budget_day_txt1"/>
        <EditText
            android:layout_width="73.8dp"
            android:layout_height="match_parent"
            android:textSize="13.5sp"
            android:textCursorDrawable="@null"
            android:background="@drawable/gray_underline"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_underline"
            android:text="@string/budget_day_txt2"
            android:textSize="13.5sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4.3"
        android:text="@string/budget_day_txt3"
        android:textSize="18.5sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4.3"
        android:weightSum="100"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/budget_day_txt4"
            android:textSize="18.5sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="25.3dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18.5sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@string/budget_day_txt2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="@string/budget_day_txt5"
            android:textSize="18.5sp"
            android:textColor="#000000"
            />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4.3"
        android:text="@string/budget_day_txt6"
        android:textSize="18.5sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.9"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4.3"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/gray_underline">
        <EditText
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bottom_gray_rect"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/budget_won"/>
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="32.9"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.3"
        android:background="@mipmap/enter"
        />
</LinearLayout>
