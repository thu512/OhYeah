<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="267dp"
        android:layout_height="372.1dp"
        android:background="#ffffff"
        android:orientation="vertical" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="318.8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="28.5dp"
                android:src="@mipmap/piggy_bank"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31.8dp"
                android:id="@+id/imageView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pp_msg5"
                android:textSize="18.5sp"
                android:textColor="#000000"
                android:layout_below="@+id/imageView7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18.8dp"
                android:id="@+id/textView7" />

            <LinearLayout
                android:layout_width="188.8dp"
                android:layout_height="28.1dp"
                android:layout_marginTop="22.5dp"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gray_underline"
                android:id="@+id/linearLayout3">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/pp_msg6"
                    android:textColor="#9b9b9b"
                    android:textSize="13.5sp"
                    android:gravity="bottom"
                    android:paddingBottom="2dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pupose_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|bottom"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="#3b4aaa"
                    android:textSize="18.5sp"
                    android:textStyle="bold"
                    android:text="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:paddingBottom="2dp"
                    android:text="@string/purpose_won"
                    android:textColor="#9b9b9b"
                    android:textSize="13.5sp"
                    android:textStyle="bold" />
            </LinearLayout>



            <RadioGroup
                android:id="@+id/purpose_select"
                android:layout_width="177.9dp"
                android:layout_height="110.9dp"
                android:orientation="vertical"
                android:layout_below="@+id/linearLayout3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49.3dp"
                    android:orientation="horizontal"
                    android:weightSum="100">
                    <RadioButton
                        android:id="@+id/home"
                        android:layout_width="49.3dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_pp_1"
                        android:button="@drawable/white_underline"
                        android:checked="true" />

                    <android.support.v4.widget.Space
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        />
                    <RadioButton
                        android:id="@+id/car"
                        android:layout_width="49.3dp"
                        android:layout_height="match_parent"
                        android:button="@drawable/white_underline"
                        android:background="@drawable/selector_pp_2"
                        />
                    <android.support.v4.widget.Space
                        android:layout_width="15dp"
                        android:layout_height="match_parent" />
                    <RadioButton
                        android:id="@+id/airplane"
                        android:layout_width="49.3dp"
                        android:layout_height="match_parent"
                        android:button="@drawable/white_underline"
                        android:background="@drawable/selector_pp_3"
                        />
                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12.3dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49.3dp"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/gift"
                        android:layout_width="49.3dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:background="@drawable/selector_pp_4"
                        />
                    <android.support.v4.widget.Space
                        android:layout_width="15dp"
                        android:layout_height="match_parent" />

                    <RadioButton
                        android:id="@+id/heart"
                        android:layout_width="49.3dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:background="@drawable/selector_pp_5"
                        />
                    <android.support.v4.widget.Space
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        />
                    <RadioButton
                        android:id="@+id/etc"
                        android:layout_width="49.3dp"
                        android:layout_height="match_parent"
                        android:button="@drawable/white_underline"
                        android:background="@drawable/selector_pp_6"
                        />
                </LinearLayout>
            </RadioGroup>



        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53.3dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gray_ract"
                android:textSize="18.5sp"
                android:textColor="#000000"
                android:text="@string/dialog_ok" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
