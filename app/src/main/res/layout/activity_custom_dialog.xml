<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.changjoo.ohyeah.ui.BudgetSettingActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="267dp"
        android:layout_height="261.8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42.8dp"
            android:gravity="center_vertical"
            android:paddingLeft="23.8dp"
            android:paddingTop="5dp"
            android:text="@string/dialog_txt"
            android:textColor="#000000"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165.8dp">
            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#ffffff"
                app:np_dividerColor="#9b9b9b"
                app:np_dividerThickness="0.7dp"
                app:np_dividerDistance="55dp"
                app:np_height="160dp"
                app:np_max="27"
                app:np_min="1"
                app:np_selectedTextColor="#3b4aaa"
                app:np_selectedTextSize="18.5sp"
                app:np_textColor="#9b9b9b"
                app:np_textSize="13.5sp"
                app:np_value="1"
                app:np_width="55.5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53.3dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cencel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gray_ract"
                android:text="@string/dialog_cencel"
                android:textColor="#000000"
                android:textSize="18.5sp" />

            <Button
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gray_ract"
                android:text="@string/dialog_ok"
                android:textColor="#000000"
                android:textSize="18.5sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
