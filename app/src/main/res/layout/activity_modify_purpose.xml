<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEdittext"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.gogolab.ohyeah.ui.ModifyPurposeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.6"
        android:background="@drawable/black_underline"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="100">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.9" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.3"
            android:background="@mipmap/back_btn" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="23.3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="34.9"
            android:gravity="center"
            android:text="@string/purpose"
            android:textColor="#3b4aaa"
            android:textSize="20.3sp" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:weightSum="100">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45.8" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.4"
            app:srcCompat="@mipmap/piggy_bank" />
    </LinearLayout>


    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:weightSum="100">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="22.2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="55.6"
            android:gravity="center"
            android:text="@string/purpose_txt"
            android:textColor="#000000"
            android:textSize="18.5sp" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.1"
        android:weightSum="100">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="23.8" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:background="@drawable/gray_underline"
            android:gravity="center"
            android:lineSpacingExtra="14.3sp"
            android:text="@string/purpose_money"
            android:textColor="#9b9b9b"
            android:textSize="13.5sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pupose_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33.6"
            android:background="@drawable/gray_underline"
            android:gravity="right|center_vertical"
            android:inputType="number"
            android:lineSpacingExtra="9.3sp"
            android:maxLength="11"
            android:singleLine="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textCursorDrawable="@null"
            android:textColor="#3b4aaa"
            android:textSize="18.5sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.7"
            android:background="@drawable/gray_underline"
            android:gravity="center"
            android:lineSpacingExtra="17sp"
            android:text="@string/purpose_won"
            android:textColor="#9b9b9b"
            android:textSize="13.5sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />


    <RadioGroup
        android:id="@+id/purpose_select"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17.9"
        android:orientation="vertical"
        android:weightSum="17.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:weightSum="100">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25.35"/>

            <RadioButton
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13.7"
                android:background="@drawable/selector_pp_1"
                android:button="@drawable/white_underline"
                android:checked="true" />
            <android.support.v4.widget.Space
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="4.1"/>
            <RadioButton
                android:id="@+id/car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13.7"
                android:button="@drawable/white_underline"
                android:background="@drawable/selector_pp_2"
                />
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.1"/>
            <RadioButton
                android:id="@+id/airplane"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13.7"
                android:button="@drawable/white_underline"
                android:background="@drawable/selector_pp_3"
                />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:weightSum="100">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25.35"/>

            <RadioButton
                android:id="@+id/gift"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13.7"
                android:button="@null"
                android:background="@drawable/selector_pp_4"
                />
            <android.support.v4.widget.Space
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="4.1"/>
            <RadioButton
                android:id="@+id/heart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13.7"
                android:button="@null"
                android:background="@drawable/selector_pp_5"
                />
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.1"/>
            <RadioButton
                android:id="@+id/etc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13.7"
                android:button="@drawable/white_underline"
                android:background="@drawable/selector_pp_6"
                />
        </LinearLayout>
    </RadioGroup>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="15.8"
        android:layout_gravity="center"
        android:background="@mipmap/back_purpose">
        <TextView
            android:id="@+id/dday"
            android:layout_width="145.8dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"

            android:textColor="#3b4aaa"
            android:textStyle="bold"
            android:layout_marginTop="27dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.6"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gray_underline"
            android:gravity="center"
            android:text="@string/modpur"
            android:textSize="13.5sp"
            android:textColor="#9b9b9b"
            android:textStyle="bold" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/day"
            android:layout_width="73.8dp"
            android:layout_height="match_parent"
            android:background="@drawable/gray_underline"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="18.5sp"
            android:textColor="#3b4aaa"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gray_underline"
            android:gravity="center"
            android:text="@string/main_won"
            android:textColor="#9b9b9b"
            android:textSize="13.5sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>

    <Button
        android:id="@+id/toss"
        android:layout_width="204.8dp"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/blue_ract"
        android:text="@string/toss"
        android:textSize="18sp"
        android:textColor="#3b4aaa"
        android:gravity="center"
        android:layout_gravity="center"
        />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.6"
        android:text="@string/submit"
        android:textSize="18.5sp"
        android:textColor="#ffffff"
        android:background="@drawable/blue_ract_bg" />


</LinearLayout>
