<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.changjoo.ohyeah.ui.LoginActivity"
    android:background="@drawable/bg_gradation"
    android:weightSum="10"
    >
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.1"
        />
    <TextView
        android:id="@+id/login_error"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:textSize="10.8sp"
        android:textColor="#ffffff"
        android:layout_gravity="center_vertical|center_horizontal"

        android:textAlignment="center"
        android:background="@drawable/round_bg"
        android:layout_weight="0.4"
        android:visibility="invisible"
        />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@drawable/white_underline"
        android:textCursorDrawable="@null"
        android:hint="@string/login_email"
        android:textSize="12sp"
        android:textColorHint="@color/colorEdittext"
        android:textColor="@color/colorEdittext"
        android:textAlignment="center"
        android:layout_gravity="center"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        />
    <EditText
        android:id="@+id/pwd"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_gravity="center"
        android:background="@drawable/white_underline"
        android:hint="@string/login_pwd"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/colorEdittext"
        android:textColorHint="@color/colorEdittext"
        android:textCursorDrawable="@null" />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        />
    <Button
        android:id="@+id/login_btn"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="@mipmap/flat_log_in"
        />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />
    <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
        android:id="@+id/buttonOAuthLoginImg"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="@drawable/login_white2"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/join_btn"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_gravity="center"
        android:hint="@string/login_join"
        android:textColorHint="@color/colorEdittext"
        android:background="@null"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="@string/login_pro"
            />
        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="match_parent"></android.support.v4.widget.Space>
        <TextView
            android:id="@+id/login_pro1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="@string/login_pro1"
            android:textStyle="bold"
            android:background="@drawable/black_underline"
            />
        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="match_parent"></android.support.v4.widget.Space>

        <TextView
            android:id="@+id/login_pro2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="@string/login_pro2"
            android:textStyle="bold"
            android:background="@drawable/black_underline"
            />
        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="match_parent">
        </android.support.v4.widget.Space>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="@string/login_pro3"
            />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        />
</LinearLayout>
