<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="267dp"
        android:layout_height="274.8dp"
        android:background="#ffffff"
        android:orientation="vertical" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="221.5dp">

            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14.8dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/cancel" />


            <ImageView
                android:layout_width="24.5dp"
                android:layout_height="28.5dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/cancel"
                android:layout_marginEnd="121.3dp"
                android:src="@mipmap/symbol"
                android:id="@+id/imageView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27.8dp"
                android:text="@string/pp_msg"
                android:layout_below="@+id/imageView5"
                android:textSize="18.5sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20.3dp"
                android:id="@+id/textView" />

            <LinearLayout
                android:layout_width="202dp"
                android:layout_height="74.5dp"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/textView"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/pp_msg2"
                    android:textSize="25.3sp"
                    android:textColor="#3b4aaa"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="800,000,000"
                        android:gravity="center_vertical"
                        android:textSize="25.3sp"
                        android:textColor="#3b4aaa"
                        android:textStyle="bold"
                        android:id="@+id/money" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/main_won"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:textSize="25.3sp"
                        android:textColor="#3b4aaa"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/money" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53.3dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blue_ract_bg"
                android:textSize="18.5sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="@string/toss" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
