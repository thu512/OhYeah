<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadius="112dp"
            android:shape="ring"
            android:useLevel="true"
            android:thickness="2dp">

            <gradient
                android:startColor="#2f7ac4"
                android:endColor="#2f7ac4"
                android:centerColor="#2f7ac4"
                android:type="sweep" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270" >
            <shape
                android:innerRadius="112dp"
                android:shape="ring"
                android:useLevel="true"
                android:thickness="2dp">
                <rotate
                    android:fromDegrees="0"
                    android:toDegrees="360"
                    android:pivotX="50%"
                    android:pivotY="50%" />
                <gradient
                    android:startColor="#94f6e8"
                    android:endColor="#94f6e8"
                    android:centerColor="#94f6e8"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>